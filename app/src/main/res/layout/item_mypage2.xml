<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"

    tools:context=".activity.ContestBasicInformationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:layout_margin="@dimen/_5sdp"
            app:cardBackgroundColor="#000000"
            app:cardCornerRadius="18dp">

            <ImageView
                android:id="@+id/imgBackground"
                android:layout_width="121dp"
                android:layout_height="84dp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:src="@drawable/ongoing_contest_item_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="@dimen/_95sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:text="client"
                    android:textColor="#EEFFFFFF" />

                <ImageView
                    android:id="@+id/imgbookmark"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_bookmark_inactive" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_28sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_120sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:text="이마트 웹 드라마 따라하기 제목은 줄까지 가능합니다."
                    android:textColor="#F0FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_120sdp"
                android:layout_marginTop="@dimen/_80sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagecreator"
                    android:layout_width="19dp"
                    android:layout_height="14dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/price3x" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="  상금"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginRight="@dimen/_22sdp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="  5,000,000원"
                    android:textColor="#F8FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_120sdp"
                android:layout_marginTop="@dimen/_100sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageprice"
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/creator3x" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="참여자"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/_22sdp"
                    android:text="1,865명"
                    android:textColor="#F8FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardStatus"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="@dimen/_5sdp"
                app:cardBackgroundColor="@color/colorSecondary"
                app:cardCornerRadius="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_1sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:text="D-00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8ssp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/btnSelectItem"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"

                android:layout_marginTop="120dp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardBackgroundColor="@color/colorSecondary"
                card_view:cardCornerRadius="@dimen/_5sdp">

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="134dp"

                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:gravity="center"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/join"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>