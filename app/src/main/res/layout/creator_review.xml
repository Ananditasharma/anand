<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activity.ContestBasicInformationActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"

        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="380dp"
            android:layout_height="175dp"
            android:padding="@dimen/_50sdp"
            app:cardBackgroundColor="@color/light_black"
            app:cardCornerRadius="@dimen/_5sdp">

            <ImageView
                android:id="@+id/imgBackground"
                android:layout_width="121dp"
                android:layout_height="81dp"

                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:src="@drawable/ongoing_contest_item_image" />

            <LinearLayout
                android:layout_width="230dp"
                android:layout_height="43dp"
                android:layout_marginLeft="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/client"

                    android:layout_width="20dp"
                    android:layout_height="29dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:text="    client"
                    android:textColor="#EEFFFFFF" />

                <ImageView
                    android:id="@+id/imgshare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_marginLeft="100dp"
                    android:src="@drawable/ic_share" />

                <ImageView
                    android:id="@+id/imgdots"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:src="@drawable/ic_bookmark_inactive" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_120sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:text="이마트 웹 드라마 따라하기 제목은 줄까지 가능합니다."
                    android:textColor="#F0FFFFFF"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="361dp"
                android:layout_height="112dp"
                android:layout_marginLeft="@dimen/_55sdp"
                android:layout_marginTop="@dimen/_72sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="19dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/deadline3x" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-30dp"
                    android:layout_weight="1"
                    android:text="남은기간"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="-40dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="-78dp"
                    android:layout_weight="1"
                    android:text="00일(~08/12 24:00)"
                    android:textColor="#F8FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="361dp"
                android:layout_height="112dp"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_88sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imagecreator"
                    android:layout_width="12dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="62dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/creator3x" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-20dp"
                    android:layout_weight="1"
                    android:text="상금"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="-40dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="-30dp"
                    android:layout_weight="1"
                    android:text="5,000,000원"
                    android:textColor="#F8FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="361dp"
                android:layout_height="112dp"
                android:layout_marginLeft="@dimen/_55sdp"
                android:layout_marginTop="@dimen/_102sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageprice"
                    android:layout_width="19dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/price3x" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-30dp"
                    android:layout_weight="1"
                    android:text="남은기간"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="-40dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="-78dp"
                    android:layout_weight="1"
                    android:text="00일(~08/12 24:00)"
                    android:textColor="#F8FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardStatus"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="@dimen/_5sdp"
                app:cardBackgroundColor="@color/colorSecondary"
                app:cardCornerRadius="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_1sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:text="D-00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8ssp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/btnSelectItem"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"

                android:layout_marginTop="120dp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="134dp"
                    android:layout_height="match_parent"

                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:gravity="center"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="참여중"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>