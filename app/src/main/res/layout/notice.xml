<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/rlmainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >
<LinearLayout
    android:id="@+id/lltool"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include
        layout="@layout/creator_toolbar"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </include>
</LinearLayout>


    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_margin="20dp"
    android:layout_below="@+id/lltool">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardIImageThumb1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/subDarkGray"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_below="@+id/lltool"
            app:cardCornerRadius="@dimen/_5sdp">


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/cardIImageThumb2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/subDarkGray"
            android:layout_marginBottom="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_5sdp">

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardIImageThumb3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/lltool"
            android:layout_alignStart="@+id/linear"
            android:background="@color/subDarkGray"
            app:cardCornerRadius="@dimen/_5sdp">

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/linear"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/customercare"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tt1"
            android:layout_gravity="left"
            android:text="2019.09.13"
            android:textColor="@color/subDarkGray" />

        <TextView
            android:id="@+id/tt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="[콘테스트 타이틀]"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="193dp"
            android:layout_height="35dp"
            android:layout_below="@+id/tt1"
            android:layout_gravity="left"
            android:text="북마크한 콘테스트 [콘테스트 타이들] 가 3일 후 마감 예정입니다. "
            android:textColor="@color/subDarkGray" />

        <TextView
            android:id="@+id/tt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@유저명"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tt1"
            android:layout_gravity="left"
            android:text="댓글에 언급됨 “댓글내용 댓글내용 댓글내용 댓글내용 댓글내용 댓글내용 댓글내용 댓글내...”"
            android:textColor="@color/subDarkGray"
            android:textSize="12sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_next_arrow"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="@dimen/_44sdp"
            android:src="@drawable/ic_next_arrow"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="@dimen/_44sdp"
            android:src="@drawable/ic_next_arrow" />

    </LinearLayout>
</RelativeLayout>
</RelativeLayout>