<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activity.SignUpActivity"
    android:orientation="vertical">

    <!--top header-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10ssp"
        android:id="@+id/ll_top"
        android:orientation="vertical">
        <include layout="@layout/custom_toolbar" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:background="@color/black"
        android:layout_below="@+id/ll_top"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/pb_loader"
            android:visibility="gone"/>
    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_50sdp"
            android:background="@color/black"
            android:id="@+id/ll_container"
            android:orientation="vertical">

            <!--signUp view 1 for email-->
            <LinearLayout
                android:id="@+id/ll_view_1_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_33sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_signup_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/signup_header"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_28sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/_24sdp"
                        android:paddingBottom="@dimen/_24sdp">


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@android:color/white"
                            android:theme="@style/TextInputLayoutAppearance">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etSignUpEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittextbackground"
                                android:hint="@string/email"
                                android:singleLine="true"
                                android:textColor="@color/subDarkGray" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:id="@+id/vEmail"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorSecondary"
                            android:paddingTop="@dimen/_2sdp" />
                    </LinearLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/signup_footer1"
                                android:id="@+id/tv_f1"
                                android:textColor="@color/subDarkGray"
                                android:textSize="@dimen/_10ssp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/signup_footer2"
                                android:id="@+id/tv_f2_terms"
                                android:layout_toRightOf="@+id/tv_f1"
                                android:textColor="@color/subDarkGray"
                                android:textSize="@dimen/_10ssp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/signup_footer3"
                                android:id="@+id/tv_f3"
                                android:layout_toRightOf="@+id/tv_f2_terms"
                                android:textColor="@color/subDarkGray"
                                android:textSize="@dimen/_10ssp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/signup_footer4"
                                android:id="@+id/tv_f4_privacy"
                                android:layout_toRightOf="@+id/tv_f3"
                                android:textColor="@color/subDarkGray"
                                android:textSize="@dimen/_10ssp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_f5"
                                android:layout_below="@+id/tv_f4_privacy"
                                android:text="@string/signup_footer_text"
                                android:textColor="@color/subDarkGray"
                                android:textSize="@dimen/_10ssp" />

                        </RelativeLayout>


                    <ImageView
                        android:id="@+id/iv_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/_28sdp"
                        android:src="@drawable/icon_next" />
                </LinearLayout>
            </LinearLayout>

            <!--signUp view 2 for company info-->
            <LinearLayout
                android:id="@+id/ll_view_2_company"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_signup_header2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/signup_header2_company_info"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_30ssp" />


                    <TextView
                        android:id="@+id/tv_signup_header22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/signup_header22"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/_24sdp"
                        android:paddingBottom="@dimen/_24sdp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilCompanyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@android:color/white"
                            android:theme="@style/TextInputLayoutAppearance">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_company_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:imeOptions="actionNext"
                                android:background="@drawable/edittextbackground"
                                android:hint="@string/signup_company_name"
                                android:singleLine="true"
                                android:textColor="@color/subDarkGray"
                                android:textSize="@dimen/_10ssp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorSecondary"
                            android:paddingTop="@dimen/_2sdp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_42sdp"
                            android:orientation="horizontal"
                            android:weightSum="12">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:hint="@string/signup_bis_reg_number"
                                android:theme="@style/TextInputLayoutAppearance">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_bis_reg_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:imeOptions="actionNext"
                                    android:background="@drawable/edittextbackground"
                                    android:inputType="number"
                                    android:singleLine="true"
                                    android:textColor="@color/subDarkGray"
                                    android:textSize="@dimen/_10ssp" />


                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/colorSecondary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_42sdp"
                            android:orientation="horizontal"
                            android:weightSum="12">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:hint="@string/signup_representative_name"
                                android:theme="@style/TextInputLayoutAppearance">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_representative_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edittextbackground"
                                    android:inputType="text"
                                    android:imeOptions="actionDone"
                                    android:singleLine="true"
                                    android:textColor="@color/subDarkGray"
                                    android:textSize="@dimen/_10ssp" />


                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/colorSecondary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_42sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_10ssp"
                                android:text="@string/signup_reg_certificate"
                                android:textColor="@color/subDarkGray"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">


                                    <LinearLayout
                                        android:id="@+id/llAddImageOne"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:background="@drawable/stroke_round_corner_gray"
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:visibility="visible">

                                        <ImageView
                                            android:id="@+id/imgAddFile"
                                            android:layout_width="@dimen/_25sdp"
                                            android:layout_height="@dimen/_25sdp"
                                            android:layout_gravity="center"
                                            android:scaleType="centerCrop"
                                            android:src="@color/subDarkGray" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/_10ssp"
                                            android:id="@+id/tv_file_name"
                                            android:textColor="@color/subDarkGray"/>

                                    </LinearLayout>


                                <ImageView
                                    android:id="@+id/iv_upload"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/_20sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:gravity="right"
                                    android:src="@drawable/upload" />


                            </RelativeLayout>

                        </LinearLayout>

                        <View
                            android:id="@+id/vPassword"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/colorSecondary" />

                    </LinearLayout>


                    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/btn_next_company_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_17sdp"
                        android:layout_marginBottom="@dimen/_17sdp"
                        android:layout_alignParentBottom="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        card_view:cardBackgroundColor="@color/colorSecondary"
                        card_view:cardCornerRadius="@dimen/_7sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_38sdp"
                                android:gravity="center"
                                android:text="@string/next"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                </ScrollView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom">

                    </RelativeLayout>

            </LinearLayout>

            <!--signUp view 3 for Contact Information-->
            <LinearLayout
                android:id="@+id/ll_view_3_contact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_signup_header3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/signup_header3_contact"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_30ssp" />

                    <TextView
                        android:id="@+id/tv_signup_header33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/signup_header33"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/_24sdp"
                        android:paddingBottom="@dimen/_24sdp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@android:color/white"
                            android:theme="@style/TextInputLayoutAppearance">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_contact_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:imeOptions="actionNext"
                                android:background="@drawable/edittextbackground"
                                android:hint="@string/signup_contact_name"
                                android:singleLine="true"
                                android:textColor="@color/subDarkGray"
                                android:textSize="@dimen/_10ssp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorSecondary"
                            android:paddingTop="@dimen/_2sdp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_42sdp"
                            android:orientation="horizontal"
                            android:weightSum="12">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:hint="@string/signup_contact_phone"
                                android:theme="@style/TextInputLayoutAppearance">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_contact_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edittextbackground"
                                    android:inputType="number"
                                    android:imeOptions="actionDone"
                                    android:singleLine="true"
                                    android:textColor="@color/subDarkGray"
                                    android:textSize="@dimen/_10ssp" />


                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/colorSecondary" />
                    </LinearLayout>

                </LinearLayout>
                </ScrollView>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom">

                        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/btnContactNext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/_17sdp"
                            android:layout_marginBottom="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            card_view:cardBackgroundColor="@color/colorSecondary"
                            card_view:cardCornerRadius="@dimen/_7sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_38sdp"
                                    android:gravity="center"
                                    android:text="@string/next"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_14ssp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
            </LinearLayout>

            <!--signUp view 4 Member Information-->
            <LinearLayout
                android:id="@+id/ll_view_4_member"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_signup_header4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/signup_header4_member"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_30ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/signup_header44_membership"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/_24sdp"
                        android:paddingBottom="@dimen/_24sdp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@android:color/white"
                            android:theme="@style/TextInputLayoutAppearance">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_member_nickname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittextbackground"
                                android:hint="@string/signup_member_nickname"
                                android:singleLine="true"
                                android:inputType="text"
                                android:imeOptions="actionNext"
                                android:textColor="@color/subDarkGray"
                                android:textSize="@dimen/_10ssp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorSecondary"
                            android:paddingTop="@dimen/_2sdp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_42sdp"
                            android:orientation="horizontal"
                            android:weightSum="12">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:hint="@string/signup_member_password"
                                android:theme="@style/TextInputLayoutAppearance">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_member_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edittextbackground"
                                    android:inputType="textPassword"
                                    android:singleLine="true"
                                    android:imeOptions="actionNext"
                                    android:textColor="@color/subDarkGray"
                                    android:textSize="@dimen/_10ssp" />


                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/colorSecondary" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_42sdp"
                            android:orientation="horizontal"
                            android:weightSum="12">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:hint="@string/signup_member_re_password"
                                android:theme="@style/TextInputLayoutAppearance">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_member_re_password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edittextbackground"
                                    android:inputType="textPassword"
                                    android:imeOptions="actionDone"
                                    android:singleLine="true"
                                    android:textColor="@color/subDarkGray"
                                    android:textSize="@dimen/_10ssp" />


                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/colorSecondary" />
                    </LinearLayout>

                </LinearLayout>
                </ScrollView>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom">

                        <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/btnMemberNext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_17sdp"
                            android:layout_marginBottom="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:clickable="true"
                            android:layout_alignParentBottom="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            card_view:cardBackgroundColor="@color/colorSecondary"
                            card_view:cardCornerRadius="@dimen/_7sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_38sdp"
                                    android:gravity="center"
                                    android:text="@string/next"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_14ssp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
